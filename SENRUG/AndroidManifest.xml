<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.senrug"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        	 <activity android:name=".Splash" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        	  <activity android:name=".GridViewActivity" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.project.senrug.GRIDVIEWACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        	  
        	  <activity android:name=".TrainSearch" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.project.senrug.TRAINSEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        	 
   
    </application>

</manifest>
